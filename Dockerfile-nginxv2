# Install PHP FPM
RUN apt update && apt install -y php8.2-fpm 


#Â Copy everything from site
COPY ./webapp /var/www/html/
# Copy nginx conf
COPY ./nginx/ /etc/
# Start PHP-FPM service
#RUN service php8.2-fpm start
